// 문자열 정렬하기(2)
import java.util.*;

class Solution {
    public String solution(String my_string) {
        String answer = "";
        
        my_string = my_string.toLowerCase(); // 다 소문자로 바꿔줌
        
        char[] chrArr = my_string.toCharArray(); // 문자열을char배열로 바꿔서 넣어줌
        
        /*for(int i = 0; i < my_string.length(); i++) { // for운래 이거 젤 먼저 돌림ㅋㅋ
            //Arrays.sort((String)my_string.charAt(i)); // 몬가 생각처럼 잘 안됨..ㅠ
        }*/
        
        Arrays.sort(chrArr); // 정렬
        
        answer = String.valueOf(chrArr); // string으로 바꿔줌 생각해보니까 왜 굳이 이렇게 했나 싶음...;;;
        return answer;
    }
}

// 중복된 문자 제거
class Solution {
    public String solution(String my_string) {
        String answer = "";
        
        for(int i = 0; i < my_string.length(); i++) {
            System.out.println(my_string.charAt(i));
        }
        
        return answer;
    }
}  // ㅠㅠ 방금 딱 풀려고 틀자마쟈 퇴근시간^^ 나중에하자~!
